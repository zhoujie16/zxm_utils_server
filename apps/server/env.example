# 应用运行环境
# 可选值：development | production
# 注意：生产环境会自动禁用 Swagger API 文档 (/docs)
NODE_ENV=development

# HTTP 服务端口
PORT=8010

# 全局 API 前缀
API_PREFIX=api

# CORS 允许来源（示例：* 或 http://localhost:3000）
CORS_ORIGIN=*

# SQLite 数据库配置
# 数据库文件路径（相对于项目根目录）
# 生产环境建议使用绝对路径
SQLITE_DATABASE=data/app.db

# 是否自动同步数据库结构（开发环境可设为 true，生产环境必须为 false）
SQLITE_SYNCHRONIZE=true

# 是否启用 SQL 日志（开发环境可设为 true，生产环境建议为 false）
SQLITE_LOGGING=true

# JWT 配置
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# 管理员账号配置
ADMIN_USERNAME=user
ADMIN_PASSWORD=pass
